<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDateFormatResultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="128dp"
        android:text="Date format result: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDateFormatResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_purple"
        android:minWidth="64dp"
        android:paddingHorizontal="8dp"
        android:textSize="16sp"
        android:paddingVertical="12dp"
        tools:text="27.12.2004"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/textViewDateFormatResultLabel"
        app:layout_constraintTop_toBottomOf="@id/textViewDateFormatResultLabel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDateFormatTestingPurposes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alpha="0.7"
        android:text="Current time will be used for testing purposes"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textViewDateFormatResult" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDateFormatBasic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:text="Basic"
        app:layout_constraintEnd_toStartOf="@id/buttonDateFormatDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDateFormatTestingPurposes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDateFormatDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:text="Detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonDateFormatBasic"
        app:layout_constraintTop_toBottomOf="@id/textViewDateFormatTestingPurposes" />


</androidx.constraintlayout.widget.ConstraintLayout>